{
    "manifest_version": 3,
    "name": "YouTube Music Video ID Grabber",
    "version": "1.0",
    "description": "Grabs the YouTube Music video ID and displays it.",
    "background": {
      "service_worker": "background.js"
  },
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["*.svg"]
}],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://music.youtube.com/*","*://www.youtube.com/*"],
        "js": ["song_data.js","database_manager.js","ui_manager.js","beat_runner.js",  "hooker.js", "chords_player.js"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  