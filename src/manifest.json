{
    "manifest_version": 3,
    "name": "Guitar Chords Player",
    "version": "1.0",
    "description": "Show guitar chords for youtube/youtube music.",


    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "windows",
      "tabs"
    ],

    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "matches": ["<all_urls>"],
      "resources": ["*.svg"]
}],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["song_data.js","database_manager.js","ui_manager.js","beat_runner.js",  "hooker.js", "chords_player.js"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  